{% extends 'base.html.twig' %}

{% block title %}Nouveau thème - Forum{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item active">Nouveau thème</li>
            </ol>
        </nav>

        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Créer un nouveau thème</h4>
            </div>
            <div class="card-body">
                {{ form_start(themeForm) }}
                    <div class="mb-3">
                        {{ form_label(themeForm.titre) }}
                        {{ form_widget(themeForm.titre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(themeForm.titre) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(themeForm.description) }}
                        {{ form_widget(themeForm.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(themeForm.description) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">Créer le thème</button>
                    </div>
                {{ form_end(themeForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
