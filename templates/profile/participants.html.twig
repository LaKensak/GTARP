{% extends 'base.html.twig' %}

{% block title %}Liste des participants - Forum{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Liste des participants</h1>

        
        {% if participants|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Pseudo</th>
                            <th>Email</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Ville</th>
                            <th>Inscrit le</th>
                            <th>Discussions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participant in participants %}
                            <tr>
                                <td><strong>{{ participant.pseudo }}</strong></td>
                                <td>{{ participant.email }}</td>
                                <td>{{ participant.nom ?? '-' }}</td>
                                <td>{{ participant.prenom ?? '-' }}</td>
                                <td>{{ participant.ville ?? '-' }}</td>
                                <td>{{ participant.createdAt|date('d/m/Y') }}</td>
                                <td>
                                    <span class="badge bg-primary">
                                        {{ participant.discussions|length }}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <p class="text-muted">
                Total : {{ participants|length }} participant(s) inscrit(s)
            </p>
        {% else %}
            <div class="alert alert-info">
                Aucun participant inscrit pour le moment.
            </div>
        {% endif %}

        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
    </div>
</div>
{% endblock %}
