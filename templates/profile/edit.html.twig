{% extends 'base.html.twig' %}

{% block title %}Mon profil - Forum{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Modifier mon profil</h4>
            </div>
            <div class="card-body">
                {{ form_start(profileForm) }}

                    <div class="mb-3">
                        {{ form_label(profileForm.pseudo) }}
                        {{ form_widget(profileForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(profileForm.pseudo) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(profileForm.nom) }}
                            {{ form_widget(profileForm.nom, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(profileForm.prenom) }}
                            {{ form_widget(profileForm.prenom, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_label(profileForm.age) }}
                            {{ form_widget(profileForm.age, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(profileForm.age) }}
                        </div>
                        <div class="col-md-8 mb-3">
                            {{ form_label(profileForm.telephone) }}
                            {{ form_widget(profileForm.telephone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(profileForm.ville) }}
                        {{ form_widget(profileForm.ville, {'attr': {'class': 'form-control', 'id': 'ville-input'}}) }}
                        <div id="ville-suggestions" class="list-group mt-1" style="display: none;"></div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour</a>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>

                {{ form_end(profileForm) }}
            </div>
        </div>

        {# Infos du compte (non modifiables ici) #}
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">Informations du compte</h5>
            </div>
            <div class="card-body">
                <p><strong>Email :</strong> {{ app.user.email }}</p>
                <p><strong>Inscrit depuis le :</strong> {{ app.user.createdAt|date('d/m/Y') }}</p>
                <p><strong>Nombre de discussions :</strong> {{ app.user.discussions|length }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    // Auto-complétion des villes (même code que l'inscription)
    const villeInput = document.getElementById('ville-input');
    const suggestions = document.getElementById('ville-suggestions');
    let timeout = null;

    villeInput?.addEventListener('input', function() {
        const query = this.value;
        clearTimeout(timeout);

        if (query.length < 2) {
            suggestions.style.display = 'none';
            return;
        }

        timeout = setTimeout(() => {
            fetch(`https://geo.api.gouv.fr/communes?nom=${encodeURIComponent(query)}&limit=5`)
                .then(response => response.json())
                .then(data => {
                    suggestions.innerHTML = '';
                    if (data.length > 0) {
                        suggestions.style.display = 'block';
                        data.forEach(ville => {
                            const item = document.createElement('a');
                            item.href = '#';
                            item.className = 'list-group-item list-group-item-action';
                            item.textContent = `${ville.nom} (${ville.codeDepartement})`;
                            item.addEventListener('click', function(e) {
                                e.preventDefault();
                                villeInput.value = ville.nom;
                                suggestions.style.display = 'none';
                            });
                            suggestions.appendChild(item);
                        });
                    } else {
                        suggestions.style.display = 'none';
                    }
                })
                .catch(err => suggestions.style.display = 'none');
        }, 300);
    });

    document.addEventListener('click', function(e) {
        if (!villeInput?.contains(e.target) && !suggestions?.contains(e.target)) {
            suggestions.style.display = 'none';
        }
    });
</script>
{% endblock %}
