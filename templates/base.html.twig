<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Forum{% endblock %}</title>

    {# ui #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .navbar-brand { font-weight: bold; }
        .discussion-box {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            background: #f9f9f9;
        }
        .discussion-meta {
            font-size: 0.85em;
            color: #666;
        }
        .theme-card {
            transition: transform 0.2s;
        }
        .theme-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .online-counter {
            font-size: 0.9em;
            color: #28a745;
        }
        .flash-message {
            margin-top: 10px;
        }
        /* modal */
        .login-modal .modal-body {
            padding: 20px;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>
    {# nav #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">Forum</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    </li>

                    {% if is_granted('ROLE_MODERATOR') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_theme_new') }}">Nouveau thème</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_participants') }}">Participants</a>
                        </li>
                    {% endif %}
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <span class="nav-link online-counter">
                            <span id="online-count">0</span> connecté(s)
                        </span>
                    </li>

                    {% if app.user %}
                        <li class="nav-item">
                            <span class="nav-link">Bonjour, <strong>{{ app.user.pseudo }}</strong></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_profile') }}">Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    {# flash #}
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} flash-message alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <main class="container py-4">
        {% block body %}{% endblock %}
    </main>

    <footer class="bg-light py-3 mt-5">
        <div class="container text-center">
            <p class="mb-0 text-muted">Forum - Projet Symfony L3</p>
        </div>
    </footer>

    {% set loginError = app.user ? null : (app.session ? app.session.get(constant('Symfony\\Component\\Security\\Core\\Security::AUTHENTICATION_ERROR')) : null) %}
    {% set lockoutUntil = app.user ? null : (app.session ? app.session.get('login_lockout_until') : null) %}
    {# login #}
    <div class="modal fade login-modal" id="loginModal" tabindex="-1"
         data-login-error="{{ loginError ? (loginError.messageKey|trans(loginError.messageData, 'security')) : '' }}"
         data-lockout-until="{{ lockoutUntil ?? '' }}">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Connexion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="login-error" class="alert alert-danger d-none"></div>

                    <form id="loginForm" action="{{ path('app_login') }}" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="_username" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="_password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                    </form>

                    <hr>
                    <p class="text-center mb-0">
                        Pas encore inscrit ? <a href="{{ path('app_register') }}">Créer un compte</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // online
        function updateOnlineCount() {
            fetch('/api/online-count')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('online-count').textContent = data.count;
                })
                .catch(err => console.error('Erreur compteur:', err));
        }

        function sendHeartbeat() {
            {% if app.user %}
            fetch('/api/heartbeat', { method: 'POST' })
                .catch(err => console.error('Erreur heartbeat:', err));
            {% endif %}
        }

        updateOnlineCount();
        setInterval(updateOnlineCount, 15000);
        setInterval(sendHeartbeat, 15000);

        // login
        const loginModalEl = document.getElementById('loginModal');
        const loginErrorBox = document.getElementById('login-error');
        const loginForm = document.getElementById('loginForm');

        if (loginModalEl && loginErrorBox && loginForm) {
            const errorText = loginModalEl.dataset.loginError || '';
            const lockoutUntil = parseInt(loginModalEl.dataset.lockoutUntil || '0', 10);

            if (errorText) {
                loginErrorBox.textContent = errorText;
                loginErrorBox.classList.remove('d-none');
                const modal = bootstrap.Modal.getOrCreateInstance(loginModalEl);
                modal.show();
            }

            const now = Math.floor(Date.now() / 1000);
            if (lockoutUntil && now < lockoutUntil) {
                const waitMs = (lockoutUntil - now) * 1000;
                loginForm.style.display = 'none';
                loginErrorBox.textContent = 'Trop de tentatives. Attends 5 secondes.';
                loginErrorBox.classList.remove('d-none');
                setTimeout(() => {
                    loginForm.style.display = 'block';
                }, waitMs);
            }
        }
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>
